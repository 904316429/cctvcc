		<result property="updateTime"   	column="update_time"  		/>
		<result property="remark"       	column="remark"       		/>
	</resultMap>

	<sql id="selectUserVo">
		user_id, dept_id, user_name, nick_name, email, phonenumber, sex, avatar, password, salt, status, del_flag, login_ip,
		login_date, pwd_update_date, create_by, create_time, update_by, update_time, remark
